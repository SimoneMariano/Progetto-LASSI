<div id="<%= dom_id book_rental %>">

  <div class="row">

    <div class="col-3">
      
      <%= link_to  book_rental.book do %>    
        <%= image_tag book_rental.book.placeholder, class: "book-img" if book_rental.book.placeholder.attached? %>
      <%end%>
      
    </div>
  
  
  <div class="col-6">
    <p>
      <strong>Book Title:</strong>
      <%= book_rental.book.title %>
    </p>
    <p>
      <strong>Book ISBN:</strong>
      <%= book_rental.book.ISBN %>
    </p>

    <p>
      <strong>User Matricola:</strong>
      <%= book_rental.user.matricola %>
    </p>

    <p>
      <strong>Start Date:</strong>
      <%= book_rental.startDate %>
    </p>

    <p>
      <strong>End Date:</strong>
      <%= book_rental.endDate %>
    </p>
  </div>

</div>
