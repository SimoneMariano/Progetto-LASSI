<p style="color: green"><%= notice %></p>



 

<table style="width:80%; vertical-align:start">

  <tbody style="vertical-align: top">
    <tr>
      <td style="width: 220px">
        <h1>Filter</h1>
        <%= form_tag(filter_secondhands_path, method: "get", remote: true, style: "margin-left: -30px; margin-right: 30px;" ) do %>
        <ul>
          <li style="list-style-type: none;">
            <%= text_field_tag :search, "", class: "form-control", placeholder: "Search ...", onkeydown: "clickSubmit()" %>
            <br>
          </li>
          <li style="list-style-type: none;">
            <%= radio_button_tag :checkCourse, "Corso di studi" %>
            <%= label :checkCourse, "Corso di studi"%>
          </li>

          <li style="list-style-type: none;">
            <%= radio_button_tag :checkCourse, "Categorie" %>
            <%= label :checkCourse, "Categorie"%>
            <ul id="ul-categories">
              <%= collection_check_boxes(:categories, :category, Category.all, :id, :name) do |b|%>
                <%= b.label class:"label-checkbox" do%>
                  <ul>
                    <%=b.check_box + b.text%>
                  </ul>
                <%end%>
              <%end%>
            </ul>
          </li>

          <li style="list-style-type: none;">
            <%= radio_button_tag :checkCourse, "Preferiti" %>
            <%= label :checkCourse, "Preferiti"%>
          </li>

          <br>

          <%= submit_tag "Filter", class: "btn btn-primary", id: "filter_submit"%>

        </ul>
        <%end%>


      </td>



      <td>


        <h1>Secondhands</h1>

        <div id="secondhands">
          <% @secondhands.each do |secondhand| %>
            <%= render secondhand %>
          <% end %>
        </div>


      </td>

    </tr>
    <tr>
    <td></td>
    <td style="text-align: end">
      <%= link_to"New secondhand", new_secondhand_path, class: "btn btn-primary", style: "margin-top: 35px" %>
    </td>
  </tr>
  </tbody>
</table>

<script>
  function clickSubmit() {
    $("#filter_submit").trigger("click");
  }
</script>


<%= javascript_pack_tag "secondhands"%>
<%= stylesheet_link_tag "books" %>
