<p style="color: green"><%= notice %></p>

<h2>Secondhand ad </h2>
<br>

<%= render @secondhand %>

<%if @secondhand.description.present?%>

  <div class="divider d-flex align-items-center my-4" style="width:1000px">
    <p class="text-center fw-bold mx-3 mb-0">Description</p>
  </div>

  <p style="width:1000px">

    <%= @secondhand.description %>
  </p>
<%end%>

<div class="d-flex">
  <div style = "padding-right: 5px;">
    <%= button_to "Destroy this secondhand", @secondhand, class: "btn btn-outline-danger", :data => {:confirm => 'Are you sure you want to delete this advertisement?'} , method: :delete %> 
  </div>
  |
  <div style= "padding-left: 5px;">
    <%= link_to "Approve", approve_path, class: "btn btn-primary"%>
  </div>
</div>

<br>

<div>
  <%= link_to "Edit this secondhand", edit_secondhand_path, class: "btn btn-outline-primary" %> |
  <%= link_to "Back to library", library_path %>
  
</div>


