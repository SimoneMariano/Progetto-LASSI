<p style="color: green"><%= notice %></p>

<%= render 'books/book_show' %>

<br>

<div class="divider d-flex align-items-center my-4" style="width:1000px">
  <p class="text-center fw-bold mx-3 mb-0">Description</p>
</div>

<p style="width:1000px">
  <%= @book.description %>
</p>


<div>
  <%= if can? :destroy, @book then  button_to "Remove from catalog", @book, method: :delete, :data => {:confirm => 'Are you sure you want to remove this book?'} , class: "btn btn-outline-danger" end %>

</div>

<br>

<div>
  <%= if can? :edit, @book then  link_to "Edit this book", edit_book_path(@book), class: "btn btn-outline-primary" end%> 
  <%= if can? :edit, @book then "|" end%>
  <%= link_to "Back to library", library_path %>
</div>
