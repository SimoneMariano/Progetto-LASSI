<body>

  <div class="row">
              <div class="col-3">
                  <h3>Filter</h3>
              </div>

              <div class="col-9">
                  <ul>
                    <% @books.each do |book| %>
                     <%= link_to book do %>
                    
                      <li>
                        
                        <%= image_tag 'placeholder/'+book.placeholder %>
                        <span>
                          <%= render book %>
                        </span>
            
                      </li>

                     <%end%> 
                      
                    <% end %>
                  </ul>

              </div>
  </div>


</body>
