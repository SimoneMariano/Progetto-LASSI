<br><br><br>

<div class="d-flex" style="justify-content: center; align-items: flex-start;">
    

    <div>
        <div class="card card-bolletin">

            <div class="card-header card-bolletin d-flex" style="justify-content:space-between">
                <p><%= @bulletin.created_at.to_date%> </p>
                <%= @bulletin.title %>
                <p></p>
            </div>

            <div class="card-body card-bolletin">
                <p>
                    <%= @bulletin.description %>
                </p>
            </div>

        </div>

        <br>

        <div>
            <%= if can? :destroy, @bulletin then  button_to "Delete bulletin", @bulletin, method: :delete, :data => {:confirm => 'Are you sure you want to remove this bulletin?'} , class: "btn btn-outline-danger" end %>

        </div>

        <br>

        <div>
            <%= if can? :edit, @bulletin then  link_to "Edit this bulletin", edit_bulletin_path(@bulletin), class: "btn btn-outline-primary" end%> 
            <%= if can? :edit, @bulletin then "|" end%>
            <%= link_to "Back to athenaeum", athenaeum_path %>
        </div>

    </div>

    

</div>

