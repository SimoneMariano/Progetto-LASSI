
<%= stylesheet_link_tag "book_scraper" %>

<body  style="padding: 15px">

    <div class="row">
        <h1>Libraccio</h1>
        <div class="col-3 col-md-2">
            <%= link_to @book_info[:url] do %>
                <img src=<%= @book_info[:img] %> style="width: 100%;">
            <%end%>
        </div>

        <div class="col-9 d-flex col-flex"> 
            <h4> <%= @book_info[:title] %> </h4>
            <div class="d-flex">
                <p class="p-author-link" >Author: </p>
                <div>
                    <% for i in 0..@book_info[:author].size()-1 do%>
                        <%= link_to @book_info[:author_link][i] do%>
                            <p class="p-author"> <%= @book_info[:author][i]%> </p>
                        <%end%>
                    <%end%>
                </div>
            </div>

            <%= link_to @book_info[:url] do%>
                <button class="btn btn-primary">GO TO BUY</button>
            <%end%>
        </div>
    </div>




</body>