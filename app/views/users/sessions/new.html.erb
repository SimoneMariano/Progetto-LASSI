<h2>Log in</h2>
<p class="notice" style="color: green"><%= notice %></p>
<p class="alert" style="color: red"><%= alert %></p>

<%= form_for(resource, as: resource_name,  local: true, url: new_session_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
  </div>

  <br>

  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
  <br>
  <%= link_to "Sign up with password", new_registration_path(resource_name)%> |
  <%= link_to "back to login", login_path%>
<% end %>





    
