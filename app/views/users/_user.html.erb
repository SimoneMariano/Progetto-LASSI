<div id="<%= dom_id user %>">

<div class="d-flex" style="justify-content: center; align-items: flex-start;">

    <div>
        <div class="card">
            <div class="card-body">
                <%if user.image.attached?%>
                    <%= image_tag user.image %>
                <%else%>
                    <div style="text-align:center">
                        <i class="fa-regular fa-user profile-image"></i>
                    </div>
                <%end%>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"></li>
                    <li class="list-group-item">
                        <strong>Name:</strong>
                        <%= user.name%>
                    </li>
                    <li class="list-group-item">
                        <strong>Surname:</strong>
                        <%= user.surname%>
                    </li>
                    <li class="list-group-item">
                        <strong>Email:</strong>
                        <%= user.email%>
                    </li>
                    
                </ul>
            
            </div>

            
        </div>

        <br>

        <%= link_to "Edit profile", profile_edit_path %>

    </div>

    <div style="padding-inline:2%">

        <div class="card">
            <div class="card-header">
                University Information
            </div>

            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>Matricola:</strong>
                        <%= user.matricola%>
                    </li>
                    <li class="list-group-item">
                        <strong>Your course:</strong>
                        <%= Course.find(user.course_id).name if user.course_id.present?%>
                        <%= label_tag "Not specified" if user.course_id.present?%>
                    </li>
                </ul>
            
            </div>
        </div>

        <br>

        <div class="card">
            <div class="card-header">
                Favorites
            </div>

            <div class="card-body favorites-body">
                <ul class="list-group list-group-flush">
                    <% user.book.each do |book|%>                   
                        <li class="list-group-item">
                            <%= link_to removeFromFavorites_path(book.id), id: "remove-favorite-#{book.id}", class: "favourites-link", style: "padding-right:10px" do%>
                                <i class="fa-solid fa-trash-can"></i>
                            <%end%>
                            <%=link_to book.title, book_url(book), style: "text-decoration:none; color:black" %>
                        </li>     
                    <%end%>
                </ul>
            
            </div>
            
        </div>

    </div>
    
</div>


</div>



