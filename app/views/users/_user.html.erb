<div id="<%= dom_id user %>">

<div class="d-flex" style="justify-content: center; align-items: flex-start;">

    <div>
        <div class="card">
            <div class="card-body">
                <%if user.image.attached?%>
                    <%= image_tag user.image %>
                <%else%>
                    <div style="text-align:center">
                        <i class="fa-regular fa-user profile-image"></i>
                    </div>
                <%end%>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"></li>
                    <li class="list-group-item">
                        <strong>Name:</strong>
                        <%= user.name%>
                    </li>
                    <li class="list-group-item">
                        <strong>Surname:</strong>
                        <%= user.surname%>
                    </li>
                    <li class="list-group-item">
                        <strong>Email:</strong>
                        <%= user.email%>
                    </li>
                    
                </ul>
            
            </div>

            
        </div>

        <br>

        <%= link_to "Edit profile", profile_edit_path %>

    </div>

    <div style="padding-inline:2%">

        <div class="card">
            <div class="card-header">
                University Information
            </div>

            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>Matricola:</strong>
                        <%= user.matricola%>
                    </li>
                    <li class="list-group-item">
                        <strong>Your course:</strong>
                        <%= Course.find(user.course_id).name%>
                    </li>
                </ul>
            
            </div>
        </div>

        <br>

        <div class="card">
            <div class="card-header">
                Favourites
            </div>

            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Name:</li>
                    <li class="list-group-item">Surname:</li>
                    <li class="list-group-item">Email:</li>
                    
                </ul>
            
            </div>
            
        </div>

    </div>
    
</div>


</div>


