<p style="color: green"><%= notice %></p>
<table style="width:80%; vertical-align:start">
  <tbody style="vertical-align: top">
    <td style="width: 220px">
    </td>
    <td>
      <div class="row">
        <img class="rounded mx-auto d-block" style="max-width: 90% text-align:center" alt="Responsive image" src="https://www.cmete.com/skins/theme_cmete_2016/images/placeholders/image-placeholder.jpg">
      </div>
      <br>
      <div class="container">
        <%= render @reservation %>
        <br>
        <div class="row">
          <% if current_user.student? %>
            <div class="col" style="text-align:center">
              <%= if can? :create, @reservation then  link_to "New reservation", new_reservation_path, class: "btn btn-info" end%>
            </div>
          <%end%>

          <div class="col" style="text-align:center">
            <%= link_to "Back to reservations", athenaeum_path, class: "btn btn-secondary" %>
          </div>

          
            <div class="col" style="text-align:center">
              <%= if can? :destroy, @reservation then link_to "Destroy this reservation", @reservation, method: :delete, class: "btn btn-danger" end%>
            </div>
          
        </div>
      </div>
    </td>
  </tbody>
</table>
